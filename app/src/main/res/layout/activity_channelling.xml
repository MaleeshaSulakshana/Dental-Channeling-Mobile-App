<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome_background"
    tools:context=".Activity.Patient.ChannellingActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="CHANNELLING Details"
                android:textAllCaps="true"
                android:textColor="@color/indigo"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:paddingBottom="50dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtFieldDoctorName"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/indigo"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textMultiLine"
                        android:textColor="@color/indigo"
                        android:hint="Doctor Name"
                        android:enabled="false"
                        android:textColorHint="@color/indigo"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtFieldCharges"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    app:boxStrokeColor="@color/indigo"
                    app:boxStrokeWidth="0dp"
                    app:hintEnabled="false"
                    android:enabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text|textMultiLine"
                        android:textColor="@color/indigo"
                        android:hint="Channelling Charges"
                        android:enabled="false"
                        android:textColorHint="@color/indigo"/>

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:text="Please fill this forum"
                    android:textColor="@color/indigo"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtFieldName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:enabled="true"
                    android:hint="Name"
                    android:textColorHint="@color/indigo"
                    app:boxStrokeColor="@color/indigo"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/indigo"
                    app:hintTextColor="@color/indigo"
                    app:placeholderTextColor="@color/indigo"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/indigo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textCapWords"
                        android:textColor="@color/indigo" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtFieldEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:enabled="true"
                    android:hint="Email"
                    android:textColorHint="@color/indigo"
                    app:boxStrokeColor="@color/indigo"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/indigo"
                    app:hintTextColor="@color/indigo"
                    app:placeholderTextColor="@color/indigo"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="@color/indigo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/indigo" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtFieldPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:enabled="true"
                    android:hint="Mobile Number"
                    android:textColorHint="@color/indigo"
                    app:boxStrokeColor="@color/indigo"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/indigo"
                    app:hintTextColor="@color/indigo"
                    app:placeholderTextColor="@color/indigo"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="@color/indigo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="phone"
                        android:textColor="@color/indigo" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/txtFiledDateSelector"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    android:enabled="false"
                    android:hint="Date"
                    android:textColorHint="@color/indigo"
                    app:boxStrokeColor="@color/indigo"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/indigo"
                    app:hintTextColor="@color/indigo"
                    app:placeholderTextColor="@color/indigo"
                    app:startIconDrawable="@drawable/ic_calendar"
                    app:startIconTint="@color/indigo">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtFieldSelectDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="phone"
                        android:textColor="@color/indigo" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnChannel"
                    android:layout_width="220dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bluecircle"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Channel"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>